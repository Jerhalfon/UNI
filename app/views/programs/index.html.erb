<div class="container">
  <h2>Our Programs</h2>
  <div class="cards">
    <% @programs.each do |program| %>
      <div class="card" style="background-image: url(<%=  %>)">
        <div class="card-description">
          <h3><%= link_to program.name, program_path(program) %></h3>
          <p>program.description</p>
        </div>

      </div>
    <% end %>
  </div>
</div>
