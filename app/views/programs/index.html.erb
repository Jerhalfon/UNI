<div class="container container-index">
  <h2>Our Programs</h2>
  <div class="cards-index">
    <% @programs.each do |program| %>
      <div class="card-product">
          <img src="https://images.unsplash.com/20/cambridge.JPG?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1630&q=80" />
          <div class="card-product-infos">
            <h2><%= program.university.name %></h2>
            <h3><%= link_to program.name, program_path(program) %></h3>
            <p><strong>Duration: </strong><%= program.duration %></p>
            <p><strong>Price: </strong><%= program.price %></p>
            <p><%= program.description%></p>
            <% if !user_signed_in? %>
              <p>you have to login before reviewing</p>
              <%= link_to "Log in", new_user_session_path %>
            <% elsif policy(Favorite).create? %>
            <%= link_to "coeur", program_favorites_path(program), method: :post %>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>
