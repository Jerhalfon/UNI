<%= simple_form_for [@program, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="body-review">
    <div class="form-review">
      <h2>Add a review</h2>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Add review", class: "btn" %>
    </div>
  </div>
<% end %>
